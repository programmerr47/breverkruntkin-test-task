<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cleverpumpkintesttask.programmerr47.github.com.flightsviewer" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".representation.FlightListActivity"
            android:label="@string/FLIGHTS_PAGE">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".representation.FlightInfoActivity"
            android:parentActivityName=".representation.FlightListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cleverpumpkintesttask.programmerr47.github.com.flightsviewer.representation.FlightListActivity"/>
        </activity>

    </application>

</manifest>
